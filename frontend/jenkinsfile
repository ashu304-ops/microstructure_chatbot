pipeline:
  agent:
    docker:
      image: node:18
      args: -v /var/run/docker.sock:/var/run/docker.sock
  environment:
    DOCKERHUB_CREDENTIALS: credentials('dockerhub-credentials')
    DOCKER_IMAGE: yourusername/mechanical-chatbot-frontend:${BUILD_ID}
  stages:
    - stage: Checkout Code
      steps:
        - git:
            url: https://github.com/yourusername/mechanical-chatbot.git
            branch: ${BRANCH_NAME}
        - sh: cd frontend
    - stage: Install Dependencies
      steps:
        - sh: npm install
    - stage: Run Tests
      steps:
        - sh: npm test
    - stage: Build and Push Docker Image
      when:
        branch: main
      steps:
        - script:
            sh: docker build -t ${DOCKER_IMAGE} -f Dockerfile .
            sh: echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
            sh: docker push ${DOCKER_IMAGE}
            sh: docker tag ${DOCKER_IMAGE} yourusername/mechanical-chatbot-frontend:latest
            sh: docker push yourusername/mechanical-chatbot-frontend:latest
    - stage: Deploy to Kubernetes
      when:
        branch: main
      steps:
        - sh: kubectl apply -f ../kubernetes/manifests.yaml
  post:
    always:
      - sh: echo "Cleaning up temporary files"
      - sh: rm -rf node_modules
